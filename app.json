{
  "expo": {
    "name": "manga_reader",
    "slug": "m_r",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/manga_reader.png",
    "splash": {
      "image": "./assets/manga_reader.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "mrios"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.giannhsker.manga_reader"
    },
    "web": {
      "favicon": "./assets/manga_reader.png"
    }
  }
}
